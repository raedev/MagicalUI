<?xml version="1.0" encoding="utf-8"?>
<com.magical.ui.widget.bottomsheet.MagicalBottomSheetLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/mgl_bottom_sheet"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/successPrimary"
            android:gravity="center|start"
            android:padding="20dp"
            android:text="RecyclerView 滑动例子"
            android:textColor="@color/white"
            android:textSize="21sp"
            android:textStyle="bold" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/backgroundPrimary" />

    </LinearLayout>

</com.magical.ui.widget.bottomsheet.MagicalBottomSheetLayout>
