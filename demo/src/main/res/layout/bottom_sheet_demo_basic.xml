<?xml version="1.0" encoding="utf-8"?>
<com.magical.ui.widget.bottomsheet.MagicalBottomSheetLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/mgl_bottom_sheet"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <TextView
            android:id="@+id/tv_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/successPrimary"
            android:gravity="center|start"
            android:padding="20dp"
            android:text="基础三段式滑动例子"
            android:textColor="@color/white"
            android:textSize="21sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="@color/warnPrimary"
            android:padding="20dp"
            android:text="这里是一个很长的文本布局"
            android:textSize="16sp"
            android:visibility="visible" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="800dp"
                    android:background="#CDDC39"
                    android:padding="20dp"
                    android:text="这里是嵌套到滚动视图中的"
                    android:textSize="16sp"
                    android:visibility="visible" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/purple_200"
                    android:gravity="center"
                    android:padding="20dp"
                    android:text="ScrollView到底啦"
                    android:textSize="16sp"
                    android:visibility="visible" />

            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</com.magical.ui.widget.bottomsheet.MagicalBottomSheetLayout>
